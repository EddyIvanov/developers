{
    "compilerOptions": {
        "module": "esnext",
        "target": "es6",
        "lib": [
            "dom",
            "es7"
        ],
        "moduleResolution": "node",
        "removeComments": false,
        "jsx": "react",
        "allowJs": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@services/*":   ["services/*"],
            "@components/*": ["components/*"],
            "@ui/*":         ["services/ui/*"],
            "@constants/*":  ["constants/*"],
            "@utils/*":      ["utils/*"],
            "@store/*":      ["store/*"],
            "@icons/*":      ["icons/*"]
        }
    },
    "exclude": [
        "**/node_modules/*",
        "**/server/*"
    ]
}
